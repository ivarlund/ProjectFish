@model ProjectFish.Models.CompLure

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CompLure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompositionId" class="control-label"></label>
                <select asp-for="CompositionId" class="form-control" asp-items="ViewBag.CompositionId">
                    <option selected disabled>Select a composition</option>
                </select>
                <span asp-validation-for="CompositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LureId" class="control-label"></label>
                <select asp-for="LureId" class="form-control" asp-items="ViewBag.LureId">
                    <option selected disabled>Select a lure</option>
                </select>
                <span asp-validation-for="LureId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CompLureId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
