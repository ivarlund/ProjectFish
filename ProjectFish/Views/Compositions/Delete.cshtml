@model ProjectFish.Models.Composition

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Composition</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Account)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Account.Mail)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reel.Brand)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rod)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rod.Brand)
        </dd class>
    </dl>

    <p><b>This will also remove corresponding fish, lures and places.</b></p>
    <dl class="row">
        <dt class="col-sm-2">
            Fish
        </dt>
        <dd class="col-sm-10">
            @foreach (var compFish in Model.CompFish)
            {
                @Html.DisplayFor(model => compFish.Fish.Species)
                <br />
            }
        </dd>
        <dt class="col-sm-2">
            Lures
        </dt>
        <dd class="col-sm-10">
            @foreach (var compLure in Model.CompLure)
            {
                @Html.DisplayFor(model => compLure.Lure.Brand)
            }
        </dd>
        <dt class="col-sm-2">
            Places
        </dt>
        <dd class="col-sm-10">
            @foreach (var compPlace in Model.CompPlace)
            {
                @Html.DisplayFor(model => compPlace.Place.Name)
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CompositionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
