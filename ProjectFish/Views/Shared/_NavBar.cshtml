@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navcolor">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProjectFish</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Fish" asp-action="Index">Fish</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Lures" asp-action="Index">Lures</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Reels" asp-action="Index">Reels</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Rods" asp-action="Index">Rods</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Places" asp-action="Index">Places</a>
                </li>
            </ul>
        </div>
        @if (HttpContextAccessor.HttpContext.Session.GetString("user") != null)
        {
            <div class="dropdown">
                <button class="dropbtn">
                    @HttpContextAccessor.HttpContext.Session.GetString("username")
                </button>
                <div class="dropdown-content">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Compositions" asp-action="Index">Compositions</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="CompFish" asp-action="Index">CompFish</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="CompLures" asp-action="Index">CompLures</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="CompPlaces" asp-action="Index">CompPlaces</a>
                    <a asp-controller="Account" asp-action="Logout"><b>Logout</b></a>
                </div>
            </div>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login">Login</a>
        }
    </div>
</nav>